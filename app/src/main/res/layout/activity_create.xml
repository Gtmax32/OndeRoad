<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unimi.mobidev.onderoad.activity.CreateActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/infoToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/infoToolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true" >

        <!--Departure Info-->

        <GridLayout
            android:id="@+id/departureLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:useDefaultMargins="false"
            android:rowCount="4"
            android:columnCount="2"
            android:background="@android:color/darker_gray"
            android:elevation="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/region_label"
                android:id="@+id/regionLabel"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <Spinner
                android:id="@+id/regionSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/provinceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/province_label"/>

            <Spinner
                android:id="@+id/provinceSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/meetingLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meeting_label"/>

            <EditText
                android:id="@+id/addressTextField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:layout_row="2"
                android:layout_column="1" />

            <ImageView
                android:id="@+id/dateIcon"
                android:src="@drawable/ic_today_black_24dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp" />

            <Button
                android:id="@+id/dateButton"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="8dp"
                android:textAllCaps="false"
                android:onClick="datePickerListener"/>

            <ImageView
                android:id="@+id/timeIcon"
                android:src="@drawable/ic_alarm_black_24dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                />

            <Button
                android:id="@+id/timeButton"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="8dp"
                android:textAllCaps="false"
                android:onClick="timePickerListener"/>

        </GridLayout>
    </ScrollView>

</RelativeLayout>
